@model UWSR.Models.Link

<h2>Are you sure you want to delete this link?</h2>

<div>
    <strong>@Model.Url</strong><br />
    Description: @Model.Description<br />
    Keywords: @Model.Keywords<br />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Links")" class="btn btn-secondary">Cancel</a>
</form>
